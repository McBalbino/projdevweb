{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,       
    "baseUrl": "./src",
    "paths": {
      "*": ["*"]
    },
    "skipLibCheck": true              
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
